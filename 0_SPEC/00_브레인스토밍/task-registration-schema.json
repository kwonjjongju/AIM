{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "업무개선 SW개발 과제 등록 양식",
  "description": "본부별 업무개선 SW개발 과제를 등록하기 위한 표준 양식",
  "type": "object",
  "properties": {
    "basicInfo": {
      "title": "① 기본 정보 영역 (누가, 무엇을)",
      "type": "object",
      "properties": {
        "departmentName": {
          "title": "부서명",
          "description": "등록 부서",
          "type": "string"
        },
        "managerName": {
          "title": "담당자명",
          "description": "과제 담당자",
          "type": "string"
        },
        "managerEmail": {
          "title": "담당자 이메일",
          "description": "연락처",
          "type": "string",
          "format": "email"
        },
        "taskName": {
          "title": "업무명",
          "description": "개선 대상 업무명",
          "type": "string"
        },
        "taskDescription": {
          "title": "업무 내용(자세히)",
          "description": "업무내용 구체적으로 기술",
          "type": "string"
        },
        "taskCategory": {
          "title": "업무 분류",
          "description": "정기/비정기",
          "type": "string",
          "enum": ["정기", "비정기"]
        },
        "taskFrequency": {
          "title": "업무 빈도",
          "description": "일/주/월 단위",
          "type": "string"
        }
      },
      "required": ["departmentName", "managerName", "managerEmail", "taskName", "taskDescription"]
    },
    "currentStatus": {
      "title": "② 업무 현황 & 문제점 (왜 필요한가)",
      "type": "object",
      "properties": {
        "currentMethod": {
          "title": "현재 업무 방식",
          "description": "수기/엑셀/시스템 외",
          "type": "string",
          "enum": ["수기", "엑셀", "시스템", "기타"]
        },
        "currentMethodDetail": {
          "title": "현재 업무 방식 상세",
          "description": "현재 방식 상세 설명",
          "type": "string"
        },
        "currentDuration": {
          "title": "현재 소요 시간",
          "description": "1회 기준",
          "type": "string"
        },
        "participantCount": {
          "title": "참여 인원 수",
          "description": "현재 투입 인원",
          "type": "integer",
          "minimum": 1
        },
        "mainProblem": {
          "title": "주요 문제점",
          "description": "정성적 문제",
          "type": "string"
        },
        "improvementReason": {
          "title": "개선 필요 사유",
          "description": "왜 자동화 필요한지",
          "type": "string"
        }
      },
      "required": ["currentMethod", "mainProblem", "improvementReason"]
    },
    "developmentGoal": {
      "title": "③ 개발 목적 & 기대 효과 (무엇을 바꾸고 싶은가)",
      "type": "object",
      "properties": {
        "developmentPurpose": {
          "title": "개발 목적",
          "description": "핵심 목표",
          "type": "string"
        },
        "expectedEffectQuantitative": {
          "title": "기대 효과(정량)",
          "description": "수치 효과",
          "type": "string"
        },
        "expectedEffectQualitative": {
          "title": "기대 효과(정성)",
          "description": "품질/리스크",
          "type": "string"
        },
        "automationLevel": {
          "title": "자동화 수준",
          "description": "부분/전체",
          "type": "string",
          "enum": ["부분 자동화", "전체 자동화"]
        }
      },
      "required": ["developmentPurpose"]
    },
    "dataSpec": {
      "title": "④ 입력 / 출력 데이터 (데이터 관점 - 매우 중요)",
      "type": "object",
      "properties": {
        "inputDataSource": {
          "title": "입력 데이터 출처",
          "description": "시스템/파일",
          "type": "string",
          "enum": ["시스템", "파일", "DB", "API", "기타"]
        },
        "inputDataFormat": {
          "title": "입력 데이터 형태",
          "description": "DB/엑셀/API",
          "type": "string",
          "enum": ["DB", "엑셀", "API", "ppt", "pdf", "이미지", "기타"]
        },
        "inputDataFrequency": {
          "title": "입력 데이터 빈도",
          "description": "실시간/배치",
          "type": "string"
        },
        "outputDataFormat": {
          "title": "출력 데이터 형태",
          "description": "엑셀/DB/웹",
          "type": "string",
          "enum": ["엑셀", "DB", "웹", "ppt", "pdf", "리포트", "기타"]
        },
        "outputDataUsage": {
          "title": "출력 데이터 사용처",
          "description": "후속 업무",
          "type": "string"
        }
      },
      "required": ["inputDataSource", "inputDataFormat", "outputDataFormat"]
    },
    "techSpec": {
      "title": "⑤ 기술 / 구현 방식 (아이디어 수준이면 선택만)",
      "type": "object",
      "properties": {
        "preferredImplementation": {
          "title": "선호 구현 방식",
          "description": "SW개발 / 태블로 대시보드",
          "type": "string",
          "enum": ["SW 개발", "태블로 대시보드", "RPA", "기타"]
        },
        "requiredTechnology": {
          "title": "필요 언어/기술",
          "description": "복수 선택 가능, 빈칸 가능",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "guiRequired": {
          "title": "GUI 필요 여부",
          "description": "Y/N",
          "type": "boolean"
        },
        "webBased": {
          "title": "웹 여부",
          "description": "웹/비웹",
          "type": "string",
          "enum": ["웹", "비웹"]
        },
        "frontendChoice": {
          "title": "프론트엔드 선택",
          "description": "선택",
          "type": "string",
          "enum": ["React", "Vue", "Python", "없음", "기타"]
        },
        "backendChoice": {
          "title": "백엔드 선택",
          "description": "선택",
          "type": "string",
          "enum": ["Python", "Node.js", "Java", "없음", "기타"]
        },
        "coreEngine": {
          "title": "엔진/로직",
          "description": "핵심 처리",
          "type": "string"
        }
      }
    },
    "infrastructure": {
      "title": "⑥ 인프라 / 운영 환경",
      "type": "object",
      "properties": {
        "deploymentEnvironment": {
          "title": "배포 환경",
          "description": "개인PC/온프레미스/클라우드",
          "type": "string",
          "enum": ["개인PC", "온프레미스", "클라우드", "기타"]
        },
        "operationMethod": {
          "title": "운영 방식",
          "description": "선택",
          "type": "string"
        },
        "serverLocation": {
          "title": "서버 위치",
          "description": "선택",
          "type": "string"
        },
        "targetDevice": {
          "title": "사용 디바이스",
          "description": "PC/모바일",
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["PC", "모바일", "태블릿"]
          }
        },
        "securityLevel": {
          "title": "보안 민감도",
          "description": "상/중/하",
          "type": "string",
          "enum": ["상", "중", "하"]
        }
      }
    },
    "userScope": {
      "title": "⑦ 사용자 & 확장성 (누가 쓰고, 커질까?)",
      "type": "object",
      "properties": {
        "primaryUserRole": {
          "title": "주요 사용자 직무",
          "description": "직무",
          "type": "string"
        },
        "expectedUserCount": {
          "title": "예상 사용자 수",
          "description": "인원",
          "type": "integer",
          "minimum": 1
        },
        "usageScope": {
          "title": "사용 범위",
          "description": "팀내/부서간/전사",
          "type": "string",
          "enum": ["팀내", "부서간", "전사"]
        },
        "crossDepartmentPossibility": {
          "title": "타 부서 확장 가능성",
          "description": "Y/N",
          "type": "boolean"
        },
        "companyWidePossibility": {
          "title": "전사 공통화 가능성",
          "description": "Y/N",
          "type": "boolean"
        }
      }
    },
    "priorityConstraints": {
      "title": "⑧ 우선순위 & 제약사항",
      "type": "object",
      "properties": {
        "importance": {
          "title": "중요도",
          "description": "상/중/하",
          "type": "string",
          "enum": ["상", "중", "하"]
        },
        "targetCompletionDate": {
          "title": "희망 완료 시점",
          "description": "날짜",
          "type": "string",
          "format": "date"
        },
        "budgetConsideration": {
          "title": "예산 고려 여부",
          "description": "Y/N",
          "type": "boolean"
        },
        "externalSolutionAllowed": {
          "title": "외부 솔루션 가능",
          "description": "Y/N",
          "type": "boolean"
        },
        "otherConstraints": {
          "title": "기타 제약사항",
          "description": "자유 기재",
          "type": "string"
        }
      }
    }
  },
  "required": ["basicInfo", "currentStatus", "developmentGoal", "dataSpec"]
}
